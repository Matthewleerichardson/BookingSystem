@model FinalTeamProject.Models.Appointment

@{
    ViewData["Title"] = "Details";
}

<h2>Details</h2>

<div>
    <h4>Appointment</h4>
    <hr />
    <dl class="dl-horizontal">  
        <dd>
            <table class="table">
                <tr>
                    <th>Appointment Date</th>
                    <th>Staff Name</th>
                    <th>Customer Name</th>
                </tr>
                
                    <tr>
                        <td>
                            @Html.DisplayFor(model => model.AppointmentDate)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Staff.FullName)
                        </td>
                        <td>
                            @Html.DisplayFor(model => model.Customer.FullName)                        
                        </td>
                    </tr>
                
            </table>
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.AppointmentID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
